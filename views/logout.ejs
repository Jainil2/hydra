<!doctype html>
<html>
  <head><meta charset="utf-8"><title>Logout</title></head>
  <body>
  <%- include('partials/navbar') %>
    <h1>Logout</h1>
    <p>Logout challenge: <%= challenge %></p>
    <form id="logout_form" method="post" action="/auth/logout">
      <input type="hidden" name="challenge" value="<%= challenge %>" />
      <button type="submit" class="btn primary">Confirm Logout</button>
    </form>
    <script src="/ui.js"></script>
    <script src="/navbar.js"></script>
    <script>
      document.getElementById('logout_form').addEventListener('submit', ()=>{
        showToast('Logging out...');
      });
    </script>
  </body>
</html>
