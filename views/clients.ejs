<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Clients</title>
    <link rel="stylesheet" href="/flows.css" />
  </head>
  <body>
  <%- include('partials/navbar') %>
    <h1>Clients</h1>
    <section>
      <h2>Create Client</h2>
      <form id="create_client">
        <label>Client ID: <input name="client_id" value="demo-client" /></label>
        <label>Client Secret: <input name="client_secret" value="secret" /></label>
        <label>Redirect URIs (comma): <input name="redirect_uris" value="http://localhost:3000/result,http://localhost:3000/callback" /></label>
        <label>Grant Types (comma): <input name="grant_types" value="authorization_code,refresh_token,client_credentials" /></label>
        <button type="submit" class="btn primary">Create Client</button>
      </form>
    </section>
    <section>
      <h2>Existing Clients</h2>
      <button id="reload_clients" class="btn">Reload</button>
      <table id="clients_table" class="output" style="width:100%; border-collapse:collapse"></table>
    </section>
  <script src="/ui.js"></script>
  <script src="/navbar.js"></script>
    <script src="/clients.js"></script>
  </body>
</html>
